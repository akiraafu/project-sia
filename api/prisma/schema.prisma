generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

//run "npx prisma db push" after making ant changes on prisema.schema
model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId //connect mongodb id with user model id using map
  email     String   @unique
  username  String   @unique
  password  String
  avatar    String? //can be empty
  createdAt DateTime @default(now())
  posts     Post[]
}

model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId //connect mongodb id with user model id using map
  title     String
  price     Int
  img       String? //can be empty
  address   String
  city      String
  bedroom   Int
  bathroom  Int
  latitute  String
  longitude String
  type      Type
  property  Property
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
}

enum Type {
  buy
  rent
}

enum Property {
  apartment
  house
  townhouse
  land
}
