generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

//run "npx prisma db push" after making ant changes on prisema.schema
model User {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId //connect mongodb id with user model id using map
  email     String      @unique
  username  String      @unique
  password  String
  avatar    String? //can be empty
  createdAt DateTime    @default(now())
  posts     Post[]
  SavedPost SavedPost[]
}

model Post {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId //connect mongodb id with user model id using map
  title      String
  price      Int
  images     String[] //can be empty
  address    String
  city       String
  bedroom    Int
  bathroom   Int
  latitude   String
  longitude  String
  type       Type
  property   Property
  createdAt  DateTime    @default(now())
  user       User        @relation(fields: [userId], references: [id])
  userId     String      @db.ObjectId
  postDetail PostDetail?
  SavedPost  SavedPost[]
}

enum Type {
  buy
  rent
}

enum Property {
  apartment
  house
  townhouse
  land
}

model PostDetail {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId //connect mongodb id with user model id using map
  desc       String
  utilities  String?
  pet        String?
  income     String?
  size       Int?
  school     Int?
  bus        Int?
  restaurant Int?
  post       Post    @relation(fields: [postId], references: [id])
  postId     String  @unique @db.ObjectId
}

//user can save posts
model SavedPost {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])
  userId    String   @db.ObjectId
  postId    String   @db.ObjectId
  createdAt DateTime @default(now())

  //same user not save the same post again
  @@unique([userId, postId])
}
